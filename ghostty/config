# ===== Behavior =====
mouse-hide-while-typing = true
scrollback-limit = 524288

# ===== KEYBINDS =====
keybind = global:cmd+s=toggle_quick_terminal
keybind = ctrl+v=new_split:right
keybind = ctrl+x=close_surface

